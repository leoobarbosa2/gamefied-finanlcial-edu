generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  STUDENT
  ADMIN
}

enum UserPlan {
  FREE
  PRO
}

// ─────────────────────────────────────────
// USERS
// ─────────────────────────────────────────

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  passwordHash  String
  displayName   String
  avatarUrl     String?
  dailyGoalMins Int      @default(10)
  role          UserRole @default(STUDENT)
  plan          UserPlan @default(FREE)
  xp                Int      @default(0)
  level             Int      @default(1)
  coins             Int      @default(0)
  bonusSessions     Int      @default(0)
  bonusSessionsDate String?  @db.VarChar(10)
  createdAt         DateTime @default(now())
  updatedAt     DateTime @updatedAt

  progress UserProgress[]
  streak   UserStreak?

  @@map("users")
}

// ─────────────────────────────────────────
// LEARNING PATHS
// ─────────────────────────────────────────

model LearningPath {
  id          String   @id @default(cuid())
  slug        String   @unique
  title       String
  description String
  iconName    String
  colorToken  String   @default("teal")
  orderIndex  Int      @default(0)
  isPublished Boolean  @default(false)
  isPremium   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  lessons  Lesson[]
  progress UserProgress[]

  @@map("learning_paths")
}

// ─────────────────────────────────────────
// LESSONS
// ─────────────────────────────────────────

model Lesson {
  id            String   @id @default(cuid())
  pathId        String
  title         String
  description   String?
  orderIndex    Int
  estimatedMins Int      @default(3)
  isPublished   Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  path     LearningPath   @relation(fields: [pathId], references: [id])
  steps    LessonStep[]
  progress UserProgress[]

  @@map("lessons")
}

model LessonStep {
  id         String   @id @default(cuid())
  lessonId   String
  stepType   StepType
  orderIndex Int
  content    Json
  createdAt  DateTime @default(now())

  lesson    Lesson     @relation(fields: [lessonId], references: [id])
  questions Question[]

  @@map("lesson_steps")
}

enum StepType {
  READ
  QUIZ
  REFLECT
}

// ─────────────────────────────────────────
// QUESTIONS
// ─────────────────────────────────────────

model Question {
  id           String   @id @default(cuid())
  stepId       String
  questionText String
  explanation  String?
  createdAt    DateTime @default(now())

  step    LessonStep       @relation(fields: [stepId], references: [id])
  options QuestionOption[]

  @@map("questions")
}

model QuestionOption {
  id         String   @id @default(cuid())
  questionId String
  text       String
  isCorrect  Boolean  @default(false)
  orderIndex Int
  createdAt  DateTime @default(now())

  question Question @relation(fields: [questionId], references: [id])

  @@map("question_options")
}

// ─────────────────────────────────────────
// USER PROGRESS
// ─────────────────────────────────────────

model UserProgress {
  id            String         @id @default(cuid())
  userId        String
  lessonId      String
  pathId        String
  status        ProgressStatus @default(NOT_STARTED)
  score         Int?
  lastStepIndex Int            @default(0)
  startedAt     DateTime?
  completedAt   DateTime?
  timeSpentSecs Int?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  user   User         @relation(fields: [userId], references: [id])
  lesson Lesson       @relation(fields: [lessonId], references: [id])
  path   LearningPath @relation(fields: [pathId], references: [id])

  @@unique([userId, lessonId])
  @@map("user_progress")
}

enum ProgressStatus {
  NOT_STARTED
  IN_PROGRESS
  COMPLETED
}

// ─────────────────────────────────────────
// USER STREAK
// ─────────────────────────────────────────

model UserStreak {
  id             String    @id @default(cuid())
  userId         String    @unique
  currentStreak  Int       @default(0)
  longestStreak  Int       @default(0)
  lastActivityAt DateTime?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id])

  @@map("user_streaks")
}
